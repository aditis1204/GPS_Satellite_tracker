<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.basicairdata.graziano.Satellite">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.location.gps" android:required="true" />

    <application
        android:name="eu.basicairdata.graziano.Satellite.GPSApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@drawable/ic_android_black_24dp"
        android:label="app"
        android:theme="@style/LaunchScreenTheme"
        android:supportsRtl="true">
        <activity android:name="eu.basicairdata.graziano.Satellite.GPSActivity"
            android:label="GPS Status Information"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="eu.basicairdata.graziano.Satellite.GPSService"
            android:exported="true">
            <intent-filter>
                <action android:name="eu.basicairdata.graziano.gpslogger.GPSService" />
            </intent-filter>
        </service>
    </application>

</manifest>